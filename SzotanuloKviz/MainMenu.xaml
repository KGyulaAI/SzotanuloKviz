<Page x:Class="SzotanuloKviz.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SzotanuloKviz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Center" Margin="0,51,0,0" TextWrapping="Wrap" FontFamily="Georgia" Text="Szókvíz" FontSize="50" VerticalAlignment="Top" Grid.ColumnSpan="3"/>

        <Button x:Name="btnKonnyu" Content="Könnyű" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" 
    Click="btnKonnyu_Click" Margin="10" Height="100px" FontSize="30" FontFamily="Georgia">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="DarkOrange" BorderBrush="Black" BorderThickness="2" CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="btnKozepes" Content="Közepes" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" 
    Click="btnKozepes_Click" Margin="10" Height="100px" FontSize="30" FontFamily="Georgia">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="DarkOrange" BorderBrush="Black" BorderThickness="2" CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="btnNehez" Content="Nehéz" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" 
    Click="btnNehez_Click" Margin="10" Height="100px" FontSize="30" FontFamily="Georgia">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="DarkOrange" BorderBrush="Black" BorderThickness="2" CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>






</Page>
